mixin CREATE_GRAPH()
    form
        div.content__graph__ox
            div.text='Ось Ox'
            input(type='radio', name='x', id='region')
            label(for='region')='Регион'
            br

            input(type='radio', name='x', id='classtype') 
            label(for='classtype')='Класс'
            br

            input(type='radio', name='x', id='purpose') 
            label(for='purpose')='Целевое назначение'
        div.content__graph__oy
            div.text='Ось Oy'

            input(type='radio', name='y', id='minprise') 
            label(for='minprise')='Минимальная стоимость'
            br

            input(type='radio', name='y', id='maxprise') 
            label(for='maxprise')='Максимальная стоимость'
            br

            input(type='radio', name='y', id='minndvi') 
            label(for='minndvi')='Минимальный NDVI'
            br

            input(type='radio', name='y', id='maxndvi') 
            label(for='maxndvi')='Максимальный NDVI'
            br

            input(type='radio', name='y', id='count') 
            label(for='count')='Количество'
        //- input(type='button' value='Построить') 
mixin CREATE_SORT()
    form
        div.content__sort__block
            select
                option='NONE'
                option='Регион'
                option='Возраст'
            input(type='checkbox', name='order',id='oredr')
            label(for='oredr')='max→min'

        div.content__sort__block
            select
                option='NONE'
                option='Стоимость'
                option='Бонитет'
                option='NDVI'
            input(type='checkbox', name='choose', id='choose')
            label(for='choose')='max→min'

        div.content__sort__block
            select
                option='NONE'
                option='Класс'
                option='Высота'
                option='Целевое назначение'
            input(type='checkbox', name='choose', id='third')
            label(for='third')='max→min'

        //- input(type="button",value="Сортировать")
