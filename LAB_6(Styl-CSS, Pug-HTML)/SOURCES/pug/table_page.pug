mixin FILL_TABLE(list)
    each item in list 
        tr 
            td= item.index
            td=item.region
            td=item.price
            td=item.class
            td=item.bonitet
            td=item.height
            td=item.ndvi
            td=item.age
            td=item.purpose
mixin CREATE_TABLE(list)
    table   
        thead   
            tr 
                th= '#' 
                th= 'Регион'
                th= 'Стоимость'
                th= 'Класс'
                th= 'Бонитет'
                th= 'Cредняя высота'
                th= 'NDVI'
                th= 'Cредний возраст'
                th= 'Целевое назначение'
        
        tbody 
            +FILL_TABLE(list)
mixin CREATE_DETAIL_LIST()
    details.content__graph
        summary= 'График'
        +CREATE_GRAPH()
    details.content__sort
        summary='Сортировка'
        +CREATE_SORT()
    details.content__filter
        summary='Фильтр'
        +CREATE_FILTER()
    details.content__tab
        summary='Распределение лесов'
        div.content__tab__scrolltable
            +CREATE_TABLE(list)

block main_content 
    
    div.content__descriprion
